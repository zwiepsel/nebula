@if (PageHeader == null)
{
    <Header Title="Nebula" Icon="solar-system"></Header>
}
else
{
    @PageHeader
}
<div id="content" class="content d-flex flex-column flex-column-fluid">
    @if (PageSubHeader == null)
    {
        <SubHeader/>
    }
    else
    {
        @PageSubHeader
    }
    <div class="post d-flex flex-column-fluid">
        <div class="@(ContainerSize == null ? "container" : $"container-{ContainerSize}")">
            @PageBody
        </div>
    </div>
</div>

@code {

    [Parameter]
    public string? ContainerSize { get; set; }

    [Parameter]
    public RenderFragment? PageHeader { get; set; }

    [Parameter]
    public RenderFragment? PageSubHeader { get; set; }

    [Parameter]
    public RenderFragment? PageBody { get; set; }

}