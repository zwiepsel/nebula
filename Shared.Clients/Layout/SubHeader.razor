@inject ILocalizer<Translations> localizer

<div id="sub-header" class="toolbar">
    <div class="container-fluid d-flex flex-stack">
        <div class="page-title d-flex align-items-center me-3 flex-wrap">
            @if (Navigation != null)
            {
                @Navigation
            }
            @if (ReturnUri != null)
            {
                <a href="@ReturnUri" class="btn btn-sm btn-active-light-primary">
                    <i class="fal fa-arrow-left me-2"></i>@localizer["back"]
                </a>
                <span class="h-20px border-gray-200 border-start mx-5"></span>
            }
            @if (Icon == null)
            {
                <h1 class="d-flex align-items-center text-dark fw-bolder my-1 fs-6">@Title</h1>
            }
            else
            {
                <h1 class="d-flex align-items-center text-dark fw-bolder my-1 fs-6">
                    <i class="fal fa-lg fa-fw fa-@Icon me-3"></i>@Title
                </h1>
            }
        </div>
        @if (Toolbar != null)
        {
            <div class="d-flex align-items-center py-1">
                @Toolbar
            </div>
        }
    </div>
</div>

@code
{

    [Parameter]
    public RenderFragment? Navigation { get; set; }

    [Parameter]
    public RenderFragment? Toolbar { get; set; }

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? ReturnUri { get; set; }

    [Parameter]
    public string? Icon { get; set; }

}