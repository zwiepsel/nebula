@if (Disabled)
{
    <button type="submit" class="btn btn-@Color fw-@(FontWeight) @(Size == null ? "btn-sm" : $"btn-{Size}") @(Class ?? "") @(Margins ? "me-2" : "")" disabled="disabled">
        <i class="fal fa-fw fa-@Icon me-2"></i>@IdleText
    </button>
}
else if (Loading)
{
    <button type="submit" class="btn btn-@Color fw-@(FontWeight) @(Size == null ? "btn-sm" : $"btn-{Size}") @(Class ?? "") @(Margins ? "me-2" : "")" disabled="disabled">
        <i class="fal fa-fw fa-spin fa-spinner-third me-2"></i>@LoadingText
    </button>
}
else
{
    <button type="submit" class="btn btn-@Color fw-@(FontWeight) @(Size == null ? "btn-sm" : $"btn-{Size}") @(Class ?? "") @(Margins ? "me-2" : "")">
        <i class="fal fa-fw fa-@Icon me-2"></i>@IdleText
    </button>
}

@code
{

    [Parameter]
    public bool Loading { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public string LoadingText { get; set; } = null!;

    [Parameter]
    public string IdleText { get; set; } = null!;

    [Parameter]
    public string Icon { get; set; } = null!;

    [Parameter]
    public string Color { get; set; } = null!;

    [Parameter]
    public string FontWeight { get; set; } = "bold";

    [Parameter]
    public string? Size { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public bool Margins { get; set; }

}