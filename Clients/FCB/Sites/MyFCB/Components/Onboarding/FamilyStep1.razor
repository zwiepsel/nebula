@code {

    [Parameter]
    public int Step { get; set; }

    [Parameter]
    public EventCallback<int> StepChanged { get; set; }

    protected override void OnInitialized()
    {
        onBoardingState.AdultQty = 1;
    }

    private void AdultIncrement()
    {
        onBoardingState.AdultQty += 1;
    }

    private void AdultDecrement()
    {
        onBoardingState.AdultQty -= 1;
    }

    private void ChildrenIncrement()
    {
        onBoardingState.ChildrenQty += 1;
    }

    private void ChildrenDecrement()
    {
        onBoardingState.ChildrenQty -= 1;
    }

    private async Task NextStep()
    {
        if (StepChanged.HasDelegate)
        {
            Step = 6;
            await StepChanged.InvokeAsync(Step);
        }
    }

    private async Task PreviousStep()
    {
        if (StepChanged.HasDelegate)
        {
            Step = 4;
            await StepChanged.InvokeAsync(Step);
        }
    }

}

